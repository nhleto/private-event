<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="field">

          <div class="control">
            <%= form_for(@invitation) do |f| %>
            <div class="field">
              <div class="control">
                <%= f.label :attended_event_id %>
                <%= f.collection_select :event, :attendee_id, Event.all, :id, :name, prompt: true %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.label :attendee_id %>
                <%= f.collection_select :attendee, :attended_event_ids, User.all, :id, :name, prompt: true %>
              </div>
            </div>

            <button class="is-warning is-light">
              <%= f.submit %>
            </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>