<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="field">

          <div class="control">
            <%= simple_form_for(@user) do |f| %>
            <%= f.error_notification %>

            <div class="field">
              <div class="control">
                <%= f.input :name,
                required: true,
                input_html: { class: 'input' },
                wrapper: false,
                label_html: { class: 'label' } %>

              </div>
            </div>
            
            <%= f.submit 'Create Account',
            class: 'button is-warning is-light mb-2' %>
            <% end %>

            <%= link_to 'Sign In?', login_path %><br />
          </div>
        </div>
      </div>
    </div>
  </div>