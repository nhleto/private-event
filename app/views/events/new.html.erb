<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="field">

          <div class="control">
            <%= simple_form_for @event, url: user_events_path do |f| %>
            <%= f.error_notification %>

            <div class="field">
              <div class="control">
                <%= f.input :name,
                required: true,
                input_html: { class: 'input' },
                wrapper: false,
                label_html: { class: 'label' } %>

              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :description,
                required: true,
                input_html: { class: 'textarea' },
                wrapper: false,
                label_html: { class: 'label' } %>

              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :date,
                required: true,
                input_html: { class: 'input' },
                wrapper: false,
                label_html: { class: 'label' } %>

              </div>
            </div>

            <%= f.submit 'Create Event',
            class: 'button is-warning is-light mt-3' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>